
@{
    ViewBag.Title = "Sistema de Gerenciamento  de Processos";
}

<div class="container" style="margin-top:-80px">
    <h3 class="page-header">Gerenciamento de Processos</h3>
    <h4>Pesquisar Processos</h4>
    <div class="row">
        <div class="form-group col-md-2">
            <label for="campo1">Empresa</label>
            <input type="text" class="form-control" id="campo1" placeholder="Nome da empresa">
        </div>

        <div class="form-group col-md-1" style="margin-left:-20px">
            <label for="campo2">Situação</label>
            <select class="form-control" id="campo2">
                <option></option>
                <option value="Ativo">Ativo</option>
                <option value="Inativo">Inativo</option>
            </select>
        </div>
        <div class="form-group col-md-1" style="margin-left:-20px">
            <label for="campo3">Estado</label>
            <select class="form-control" id="campo3">
                <option></option>
                <option value="AC">Acre</option>
                <option value="AL">Alagoas</option>
                <option value="AM">Amazonas</option>
                <option value="AP">Amapá</option>
                <option value="BA">Bahia</option>
                <option value="CE">Ceará</option>
                <option value="DF">Distrito Federal</option>
                <option value="ES">Espírito Santo</option>
                <option value="GO">Goiás</option>
                <option value="MA">Maranhão</option>
                <option value="MG">Minas Gerais</option>
                <option value="MS">Mato Grosso do Sul</option>
                <option value="MT">Mato Grosso</option>
                <option value="PA">Pará</option>
                <option value="PB">Paraíba</option>
                <option value="PE">Pernambuco</option>
                <option value="PI">Piauí</option>
                <option value="PR">Paraná</option>
                <option value="RJ">Rio de Janeiro</option>
                <option value="RN">Rio Grande do Norte</option>
                <option value="RO">Rondônia</option>
                <option value="RR">Rorâima</option>
                <option value="RS">Rio Grande do Sul</option>
                <option value="SC">Santa Catarina</option>
                <option value="SE">Sergipe</option>
                <option value="SP">São Paulo</option>
                <option value="TO">Tocantins</option>
            </select>
        </div>
        <div class="form-group col-md-1" style="margin-left:-20px">
            <label for="campo4">Tipo</label>
            <select class="form-control" id="campo4">
                <option></option>
                <option value="CIVEL">CIVEL</option>
                <option value="TRAB">TRAB</option>
            </select>
        </div>
        <div class="form-group col-md-1" style="margin-left:-10px">
            <label for="campo5">Busca</label>
            <select class="form-control" id="campo5">
                <option></option>
                <option value=">">></option>
                <option value="<"><</option>
                <option value="=">=</option>
                <option value=">=">>=</option>
                <option value="<="><=</option>
                <option value="<>"><></option>
            </select>
        </div>
        <div class="form-group col-md-1" style="margin-left:-30px">
            <label for="campo6">Dia</label>
            <input type="number" maxlength="2" min="1" max="31" class="form-control" id="campo6">
        </div>
        <div class="form-group col-md-1" style="margin-left:-30px">
            <label for="campo7">Mês</label>
            <input type="number" maxlength="2" min="1" max="12" class="form-control" id="campo7">
        </div>
        <div class="form-group col-md-1" style="margin-left:-30px">
            <label for="campo8">Ano</label>
            <input type="number" maxlength="4" min="1980" max="9999" class="form-control" id="campo8">
        </div>
        <div class="form-group col-md-1" style="margin-left:-10px">
            <label for="campo9">Busca</label>
            <select class="form-control" id="campo9">
                <option></option>
                <option value=">">></option>
                <option value="<"><</option>
                <option value="=">=</option>
                <option value=">=">>=</option>
                <option value="<="><=</option>
                <option value="<>"><></option>
            </select>
        </div>
        <div class="form-group col-md-2" style="margin-left:-30px">
            <label for="campo10">Valor</label>
            <input type="text" maxlength="10" min="0" class="form-control" style="width:120px" id="campo10">
        </div>
        <div class="form-group col-md-1" style="margin-left:-60px">
            <label for="campo11" style="color:white">_______</label>
            <button id="filtrar" class="btn btn-primary" ng-click="PesquisarProcessos()">Filtrar<span style="margin-left:10px" class="glyphicon glyphicon-filter"></span></button>
        </div>
        <div class="form-group col-md-1" style="margin-left:-5px">
            <label for="campo12" style="color:white">_______</label>
            <button id="listar" class="btn btn-success" ng-click="ExibirTodos()">Reexibir Todos<span style="margin-left:10px" class="glyphicon glyphicon-eye-open"></span></button>
        </div>
    </div>
    <table>
        <tr>
            <td style="padding-right:50px"><h4><strong>Quantidade de processos:</strong> {{NumeroProcessos}}</h4></td>
            <td style="padding-right:50px"><h4><strong>Custo total dos processos:</strong> {{ValorTotal}}</h4></td>
            <td><h4><strong>Custo médio dos processos:</strong> {{ValorMedio}}</h4></td>
        </tr>
    </table>
    <br />
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th style="text-align:center">Nº Processo</th>
                    <th style="text-align:center">Empresa</th>
                    <th style="text-align:center">CNPJ / Estado (Empresa)</th>
                    <th style="text-align:center">Estado</th>
                    <th style="text-align:center">Situação</th>
                    <th style="text-align:center">Data de Início</th>
                    <th style="text-align:center">Valor do Processo</th>
                    <th style="text-align:center;width:200px">Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="processo in ListaProcessos">
                    <td style="vertical-align:middle">{{processo.Processo}}</td>
                    <td style="vertical-align:middle">{{processo.Empresa}}</td>
                    <td style="vertical-align:middle">{{processo.Cnpj}} / {{processo.EstadoEmpresa}}</td>
                    <td style="vertical-align:middle">{{processo.Estado}}</td>
                    <td style="vertical-align:middle">{{processo.Situacao}}</td>
                    <td style="vertical-align:middle">{{processo.DataInicio}}</td>
                    <td style="vertical-align:middle">{{processo.Valor}}</td>
                    <td style="width:200px;text-align:center">
                        <button class="btn btn-info" ng-click="EditarProcesso(processo.Codigo)">Editar <span style="margin-left:3px" class="glyphicon glyphicon-pencil" ></span></button>
                        <button class="btn btn-danger" ng-click="ExcluirProcesso(processo.Codigo,processo.Processo)">Excluir <span style="margin-left:3px" class="glyphicon glyphicon-trash"></span></button>
                    </td>
                </tr>
            </tbody>
        </table>
        <div style="text-align:right"><button class="btn btn-warning" ng-click="NovoProcesso()">Novo processo <span style="margin-left:3px" class="glyphicon glyphicon-book"></span></button></div>
    </div>
</div>
<input type="hidden" id="codigoProcesso" value="" />

